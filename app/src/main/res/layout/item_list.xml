<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_item_list"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_list_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_arm"
            android:layout_margin="10dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_list_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Paciente"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:textColor="@color/Black"
                />
            <TextView
                android:id="@+id/id_list_subtitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion Dispositivo"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:textColor="@color/Black"
                />

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>