<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Examenes.Frag_Rango_Movimiento">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        >



        <ImageView
            android:id="@+id/id_bluetoothPopUp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_bluet_off"
            />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/id_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X: "
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/id_dato_X"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y: "
                android:textStyle="bold"
                android:textSize="30sp"
                />
            <TextView
                android:id="@+id/id_dato_Y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>

        </LinearLayout>

        <Button
            android:background="@drawable/btn_circle"
            android:id="@+id/btn_examensGo"
            android:layout_marginVertical="@dimen/margin_principal"
            android:layout_marginHorizontal="@dimen/margin_principal"
            android:textColor="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Iniciar"
            />

        <Button
            android:background="@drawable/btn_circle"
            android:id="@+id/btn_guardarRango"
            android:textColor="@color/White"
            android:layout_marginHorizontal="@dimen/margin_principal"
            android:layout_marginVertical="@dimen/margin_principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Guardar"
            />

    </LinearLayout>

